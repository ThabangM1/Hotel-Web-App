
@{
    ViewBag.Title = "management";
    TempData.Keep();
}

<h2>staff management</h2>

<div class=" row">
    <div class="col-lg-2 col-md-2 col-sm-2">
        <div class="row" style="justify-content:center;height:100%">
            <div class="card text-white bg-primary" style="padding:10px;height:inherit">
                <div class="card-header" style="cursor:pointer" onclick="openAccounts()">
                    <span>&#10094;</span> Back
                </div>
                <div class="text-center">
                    <button class="btn btn-success" onclick="openRegistration()">Add Staff</button>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-10 col-md-10 col-sm-10">
        <div style="justify-content:center">
            <div class="row" style="text-align:left">
                <h5>Managers</h5>
                <div id="managerdiv">
                    @foreach (var staff in Model)
                    {
                        if (staff.access == "manager")
                        {
                            <a class=" clearlink" href="https://localhost:44395/Account/Details/@staff.id">
                                <div class="card bg-light shadow">
                                    <div class="card-header">
                                        @staff.fname @staff.lname
                                    </div>
                                    <div class="card-body">
                                        @staff.email
                                    </div>
                                </div>
                            </a>
                            <br />
                        }
                    }
                </div>
            </div>
            <br />
            <div class="row" style="text-align:left">
                <h5>Clerks</h5>
                <div id=" clerkdiv">
                    @foreach (var staff in Model)
                    {
                        if (staff.access == "clerk")
                        {
                            <a class=" clearlink" href="https://localhost:44395/Account/Details/@staff.id">
                                <div class="card bg-light shadow">
                                    <div class="card-header">
                                        @staff.fname @staff.lname
                                    </div>
                                    <div class="card-body">
                                        @staff.email
                                    </div>
                                </div>
                            </a>
                            <br />
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script type="text/javascript">

    function openRegistration() {
        window.location.assign("https://localhost:44395/Account/Registration");
    }

    function openAccounts() {
        window.location.assign("https://localhost:44395/Home/Index");
    }
</script>